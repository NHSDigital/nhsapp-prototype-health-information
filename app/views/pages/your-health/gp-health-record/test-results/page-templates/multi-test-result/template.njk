{% extends 'layout-app.html' %}

{% set hub = "Your health" %}

{% set backLink = true %}
{% set backLinkText = "Back" %}

{% block content %}

  <h1 class=nhsuk-u-margin-bottom-2>{{ params.pageTitle }}</h1>

  <p class="nhsuk-body-m nhsuk-u-padding-top-2 nhsuk-u-font-weight-bold nhsuk-u-margin-bottom-8">{{ params.testDate }}</p>

  {%- if params.hcpComments %}
    {{ hcpComments(params.hcpComments) }}
  {%- endif %}

  {%- if params.labComments %}
    {{ labCommentsCollapsible(params.labComments) }}
  {%- endif %}

  {%- if params.supportingContent %}
    {{ supportingContent(params.supportingContent) }}
  {%- endif %}

  <hr class="nhsuk-section-break nhsuk-section-break--xl nhsuk-section-break--visible app-section-break--width-4 color_nhsuk-grey-1">

  <section>
    <h2>Your results</h2>

    <ul style="list-style: none; padding: 0;">
    {% for result in params.resultValues %}
      {{ testResultValue(result) }}
    {% endfor %}
    </ul>
  </section>
  {{ glossary() }}

{% endblock %}